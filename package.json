{
  "$schema": "http://json.schemastore.org/package",
  "name": "cordis",
  "version": "0.1.0",
  "description": "A modular, micros-service based Discord API wrapper",
  "scripts": {
    "lint": "pnpm recursive run lint --filter @cordis/*",
    "build": "pnpm recursive run build --filter @cordis/*",
    "docs": "typedoc",
    "test": "jest",
    "test:ci": "jest --ci --no-stack-trace --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cordisjs/cordis.git"
  },
  "contributors": [
    "didinele <didinele.dev@gmail.com> (https://github.com/didinele)",
    "Holo-Buckshot (https://github.com/Holo-Buckshot)"
  ],
  "author": "didinele",
  "bugs": {
    "url": "https://github.com/cordisjs/cordis/issues"
  },
  "homepage": "https://github.com/cordisjs/cordis#readme",
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@babel/preset-typescript": "^7.12.13",
    "@strictsoftware/typedoc-plugin-monorepo": "^0.3.1",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "babel-jest": "^26.6.3",
    "babel-plugin-const-enum": "^1.0.1",
    "babel-plugin-replace-ts-export-assignment": "^0.0.2",
    "eslint": "^7.19.0",
    "eslint-config-marine": "^7.2.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "typedoc": "^0.19.2",
    "typedoc-plugin-as-member-of": "^1.0.2",
    "typedoc-plugin-markdown": "^3.4.5",
    "typedoc-plugin-no-inherit": "^1.2.0",
    "typescript": "^4.2.0-dev.20210206"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  }
}
